<PropertyList>
	<name>damage-dialog</name>
	<layout>vbox</layout>
	<resizable>false</resizable>
	<modal>false</modal>
	<draggable>true</draggable>
	<default-padding>3</default-padding>

	<nasal>
		<open>	</open>
	</nasal>
	
	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>
		<text>
			<label>Debug Options</label>
		</text>
		<empty><stretch>true</stretch></empty>
		<button>
			<legend></legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		<default-padding>5</default-padding>
	</group>
	
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Right Wing</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/rightwingdamage</property>
			</binding>
		</button>
	</group>
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Left Wing</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/leftwingdamage</property>
			</binding>
		</button>
	</group>
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Both Wings</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/bothwingdamage</property>
			</binding>
		</button>
	</group>
	
	<text>  
        <label>   ------------   </label>
        <halign>center</halign>
    </text>
	
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Nose Gear</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/nosedamage</property>
			</binding>
		</button>
	</group>
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Left Gear</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/leftgeardamage</property>
			</binding>
		</button>
	</group>
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage Right Gear</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/rightgeardamage</property>
			</binding>
		</button>
	</group>
	
	<text>  
        <label>   ------------   </label>
        <halign>center</halign>
    </text>
	
	<group>
		<layout>hbox</layout>
		<button>
			<legend>Damage All</legend>
			<pref-height>28</pref-height>
			<binding>
				<command>property-toggle</command>
				<property>sim/rendering/alldamage</property>
			</binding>
		</button>
	</group>
	
	<group>
		<layout>hbox</layout>
		<default-padding>5</default-padding>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		<default-padding>3</default-padding>

		<button>
			<legend>Close</legend>
			<equal>true</equal>
			<key>Esc</key>
			<default>true</default>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
</PropertyList>

